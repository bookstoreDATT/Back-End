{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "outDir": "dist",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "removeComments": true,
        "paths": {
            "@/*": ["src/*"]
        },
        "types": ["node"],
        "typeRoots": ["./node_modules/@types", "../node_modules/@types", "../../node_modules/@types"]
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "files": ["src/type.d.ts"],
    "include": ["./src/**/*"]
}
